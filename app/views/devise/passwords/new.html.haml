= simple_form_for(resource, as: resource_name, url: password_path(resource_name), wrapper: 'login_form') do |f|
  %h3.form-title.font-green Forgot your password?
  - if resource.errors.count > 0
    .alert.alert-danger
      - resource.errors.full_messages.each do |message|
        %span= message

  = f.input :email, required: false, autofocus: true, placeholder: 'Username'

  .form-actions
    = f.button :submit, "Reset password", class: 'green uppercase'
    = link_to 'Log in', new_session_path(resource_name), class: 'forget-password'
