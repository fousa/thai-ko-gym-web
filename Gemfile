source 'https://rubygems.org'

# Ruby on Rails is a full-stack web framework optimized for programmer happine
# [rails](http://www.rubyonrails.org)
gem "rails", "~> 5.0"

# Pg is the Ruby interface to the {PostgreSQL RDBMS}[http://www.postgresql.org
# [pg](https://bitbucket.org/ged/ruby-pg)
gem "pg", "~> 0.18"

# Puma is a simple, fast, threaded, and highly concurrent HTTP 1.1 server for
# [puma](http://puma.io)
gem "puma", "~> 3.4"

# Sass adapter for the Rails asset pipeline.
# [sass-rails](https://github.com/rails/sass-rails)
gem "sass-rails", "~> 5.0"

# gem 'uglifier', '>= 1.3.0'

# Uglifier minifies JavaScript files by wrapping UglifyJS to be accessible in
# [uglifier](http://github.com/lautis/uglifier)
gem "uglifier", "~> 3.0.0"

# CoffeeScript adapter for the Rails asset pipeline.
# [coffee-rails](https://github.com/rails/coffee-rails)
gem "coffee-rails", "~> 4.2"

# This gem provides jQuery and the jQuery-ujs driver for your Rails 4+ applica
# [jquery-rails](http://rubygems.org/gems/jquery-rails)
gem "jquery-rails", "~> 4.1"

# Rails engine for Turbolinks 5 support
# [turbolinks](https://github.com/turbolinks/turbolinks-rails)
gem "turbolinks", "~> 5.0"

# Create JSON structures via a Builder-style DSL
# [jbuilder](https://github.com/rails/jbuilder)
gem "jbuilder", "~> 2.5"

# Autoload dotenv in Rails.
# [dotenv-rails](https://github.com/bkeepers/dotenv)
gem "dotenv-rails", "~> 2.1"

group :development, :test do
  # Byebug is a Ruby 2 debugger. It's implemented using the Ruby 2 TracePoin
  # [byebug](http://github.com/deivid-rodriguez/byebug)
  gem "byebug", "~> 9.0", platform: :mri
end

group :development do
  # A debugging tool for your Ruby on Rails applications.
  # [web-console](https://github.com/rails/web-console)
  gem "web-console", "~> 3.3"

  # The Listen gem listens to file modifications and notifies you about the chan
  # [listen](https://github.com/guard/listen)
  gem "listen", "~> 3.1"

  # Preloads your application so things like console, rake and tests run faster
  # [spring](https://github.com/rails/spring)
  gem "spring", "~> 1.7"

  # Makes spring watch files using the listen gem.
  # [spring-watcher-listen](https://github.com/jonleighton/spring-watcher-listen)
  gem "spring-watcher-listen", "~> 2.0"
end

# TZInfo::Data contains data from the IANA Time Zone database packaged as Ruby
# [tzinfo-data](http://tzinfo.github.io)
gem "tzinfo-data", "~> 1.2016.5", platforms: [:mingw, :mswin, :x64_mingw, :jruby]
