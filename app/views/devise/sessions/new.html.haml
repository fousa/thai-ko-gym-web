= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: 'login_form') do |f|
  %h3.form-title.font-green= t 'pages.login.title'
  = flash_tag

  = f.input :email,    required: false, autofocus: true,     placeholder: t('pages.login.placeholders.email')
  = f.input :password, required: false, autocomplete: false, placeholder: t('pages.login.placeholders.password')

  .form-actions
    = f.button :submit, t('pages.login.buttons.submit'), class: 'green uppercase'
    = link_to t('pages.login.links.forgot_password'), new_password_path(resource_name), class: 'forget-password'
