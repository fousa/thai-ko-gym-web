= simple_form_for(resource, as: resource_name, url: password_path(resource_name), wrapper: 'login_form') do |f|
  %h3.form-title.font-green= t 'pages.forgot_password.title'
  - if resource.errors.count > 0
    .alert.alert-danger
      - resource.errors.full_messages.each do |message|
        %span= message

  = f.input :email, required: false, autofocus: true, placeholder: t('pages.forgot_password.placeholders.email')

  .form-actions
    = f.button :submit, t('pages.forgot_password.buttons.submit'), class: 'green uppercase'
    = link_to t('pages.forgot_password.links.login'), new_session_path(resource_name), class: 'forget-password'
