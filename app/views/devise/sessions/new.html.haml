= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: 'login_form') do |f|
  %h3.form-title.font-green Sign In
  - if flash[:alert]
    .alert.alert-danger
      %span= flash[:alert]

  = f.input :email, required: false, autofocus: true, placeholder: 'Username'
  = f.input :password, required: false, autocomplete: false, placeholder: 'Password'

  .form-actions
    = f.button :submit, "Log in", class: 'green uppercase'
    %label.rememberme.check.mt-checkbox.mt-checkbox-outline
      %input{:name => "user[remember_me]", id: 'user_remember_me', :type => "checkbox", :value => "1"}>/
      Remember
      %span
    = link_to 'Forgot Password?', new_password_path(resource_name), class: 'forget-password'
